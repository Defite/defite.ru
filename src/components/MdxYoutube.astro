---
export interface Props {
    src: string;
    title: string;
}

const { src, title } = Astro.props;
---

<div class="wrapper">
    <iframe class="iframe" src={src} title={title} allowfullscreen></iframe>
</div>

<style>
    .wrapper {
        position: relative;
        width: 100%;
        padding-bottom: 56.25%;
        margin-top: 1em;
    }

    .iframe {
        position: absolute;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        border: 0;
    }
</style>
