---
import MdxImage from "./MdxImage.astro";

export interface Props {
  items: string[];
  width: number;
  withUrl?: boolean;
}

const { items, width, withUrl } = Astro.props;
---

<div class="mdx-gallery-grid">
  {
    items.map((item) => (
      <MdxImage
        src={`/src/assets/${item}`}
        width={width}
        alt={`${item}`}
        withUrl={withUrl}
      />
    ))
  }
</div>

<style>
  @reference "../styles/global.css";
  
  .mdx-gallery-grid {
    @apply rounded-md;

    overflow: hidden;

    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(auto, 358px));
    gap: 20px;
    margin-top: 1em;
    margin-left: -20px;
    width: calc(100% + 40px);
  }

  .mdx-gallery-grid > :global(.figure) {
    margin-top: 0;
  }

  @screen sm {
    .mdx-gallery-grid {
      width: 100%;
    }
  }
</style>
