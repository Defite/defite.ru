---
import { SEO } from "astro-seo";

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<SEO
  title={title}
  description={description}
  openGraph={{
    basic: {
      title,
      type: "blog",
      image: image ?? "",
    },
  }}
  twitter={{
    title,
    description,
    image: image ?? "",
  }}
/>
